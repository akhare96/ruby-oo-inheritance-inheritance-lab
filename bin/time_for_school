#!/usr/bin/env ruby

require_relative "../lib/user.rb"
require_relative "../lib/teacher.rb"
require_relative "../lib/student.rb"

steve = Student.new
steve.first_name = "Steve"
steve.last_name = "Jobs"

avi = Teacher.new
avi.first_name = "Avi"
avi.last_name = "Flombaum"


some_knowledge = avi.teach 

steve.learn(some_knowledge)

puts "Steve just learned this important knowledge: '#{steve.knowledge.first}' from Avi"

jim = User.new
jim.first_name = "Jim"
jim.last_name = "Halpert"

# jim.learn(some_knowledge) <-- gives error undefined method learn for user jim

some_more_knowledge = avi.teach

steve.learn(some_more_knowledge)

homer = Student.new
homer.first_name = "Homer"
homer.last_name = "Simpson"

new_knowledge = avi.teach
homer.learn(new_knowledge)

puts "So far #{homer.first_name} has learned #{homer.knowledge} and #{steve.first_name} has learned #{steve.knowledge}"

